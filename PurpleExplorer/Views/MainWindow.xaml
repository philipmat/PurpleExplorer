<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:PurpleExplorer.ViewModels;assembly=PurpleExplorer"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:PurpleExplorer.Models"
        xmlns:helpers="clr-namespace:PurpleExplorer.Helpers"
        xmlns:i="clr-namespace:Projektanker.Icons.Avalonia;assembly=Projektanker.Icons.Avalonia"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PurpleExplorer.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="PurpleExplorer - cross-platform Azure Service Bus explorer">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Window.Resources>
        <helpers:GridLengthConverter x:Key="GridLengthConverter" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.RowSpan="3" Background="#80000000" IsVisible="{Binding IsBusy}" ZIndex="100">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="20" />
                <TextBlock Text="Loading..." HorizontalAlignment="Center" Foreground="White" Margin="0,10,0,0"
                           FontSize="18" FontWeight="Bold" />
            </StackPanel>
        </Grid>

        <DockPanel Grid.Column="0" Grid.Row="0" Dock="Left">
            <Button HorizontalAlignment="Left" Command="{Binding ConnectionBtnPopupCommand}"
                    Classes="topButton">
                <StackPanel Orientation="Horizontal">
                    <i:Icon Value="fa-plug" />
                    <TextBlock VerticalAlignment="Center">Connect</TextBlock>
                </StackPanel>
            </Button>
            <Button Name="RefreshButton" Classes="topButton"
                    Command="{Binding RefreshCommand}">
                <StackPanel Orientation="Horizontal">
                    <i:Icon Value="fa-arrows-rotate" />
                    <TextBlock VerticalAlignment="Center">Refresh</TextBlock>
                </StackPanel>
            </Button>
            <Button Name="AddButton" Classes="topButton"
                    Command="{Binding AddMessageCommand}">
                <StackPanel Orientation="Horizontal">
                    <i:Icon Value="fa-envelope" />
                    <TextBlock VerticalAlignment="Center">New message</TextBlock>
                </StackPanel>
            </Button>
            <Button Name="PurgeActiveMessagesButton" Classes="topButton"
                    Command="{Binding PurgeMessagesCommand}" CommandParameter="false">
                <StackPanel Orientation="Horizontal">
                    <i:Icon Value="fa-trash" />
                    <TextBlock VerticalAlignment="Center">Purge messages</TextBlock>
                </StackPanel>
            </Button>
            <Button Name="PurgeDlqMessagesButton" Classes="topButton"
                    Command="{Binding PurgeMessagesCommand}" CommandParameter="true">
                <StackPanel Orientation="Horizontal">
                    <i:Icon Value="fa-trash" />
                    <TextBlock VerticalAlignment="Center">Purge dead-letter</TextBlock>
                </StackPanel>
            </Button>
            <Button Name="TransferDlqMessagesButton" Classes="topButton"
                    Command="{Binding TransferDeadLetterMessagesCommand}">
                <StackPanel Orientation="Horizontal">
                    <i:Icon Value="fa-shuffle" />
                    <TextBlock VerticalAlignment="Center">Transfer DLQ</TextBlock>
                </StackPanel>
            </Button>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <TextBlock Margin="0,3,10,0" TextAlignment="Right">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="PurpleExplorer&#x0a;{0}">
                            <Binding Path="AppVersionText" />
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <Button HorizontalAlignment="Right" Command="{Binding ShowSettings}"
                        Classes="topButton">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center">Settings</TextBlock>
                        <i:Icon Value="fa-gear" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </DockPanel>

        <DockPanel Grid.Column="0" Grid.Row="1" Dock="Left">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="{Binding TopicListWidth, Mode=TwoWay, Converter={StaticResource GridLengthConverter}}"
                        MinWidth="100" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TabControl Grid.Column="0">
                    <TabItem Header="{Binding TopicTabHeader}">
                        <DockPanel>
                            <TextBox DockPanel.Dock="Top" Text="{Binding SearchText}" Watermark="Filter tree..."
                                     Margin="5">
                                <TextBox.InnerRightContent>
                                    <CheckBox IsChecked="{Binding IsRegex}" Content="Regex" VerticalAlignment="Center"
                                              Margin="0,0,5,0" BorderThickness="0" Background="Transparent" />
                                </TextBox.InnerRightContent>
                            </TextBox>
                            <TreeView SelectionChanged="TreeView_SelectionChanged"
                                      ItemsSource="{Binding FilteredConnectedServiceBuses}" Name="TopicsTreeView">
                                <TreeView.DataTemplates>
                                    <TreeDataTemplate DataType="models:ServiceBusResource"
                                                      ItemsSource="{Binding Topics}">
                                        <StackPanel Orientation="Horizontal">
                                            <i:Icon Value="fa-server" />
                                            <TextBlock Margin="5, 4" VerticalAlignment="Center"
                                                       Text="{Binding Name}" />
                                        </StackPanel>
                                    </TreeDataTemplate>
                                    <TreeDataTemplate DataType="models:ServiceBusTopic"
                                                      ItemsSource="{Binding Subscriptions}">
                                        <StackPanel Orientation="Horizontal">
                                            <i:Icon Value="fa-bars" />
                                            <TextBlock Margin="3,8" Text="{Binding Name}" />
                                        </StackPanel>
                                    </TreeDataTemplate>
                                    <DataTemplate DataType="models:ServiceBusSubscription">
                                        <StackPanel Orientation="Horizontal">
                                            <i:Icon Value="fa-microchip" />
                                            <TextBlock Margin="3,4">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0}({1},{2})">
                                                        <Binding Path="Name" />
                                                        <Binding Path="MessageCount" />
                                                        <Binding Path="DlqCount" />
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </TreeView.DataTemplates>
                                <TreeView.Styles>
                                    <Style Selector="TreeViewItem">
                                        <Setter Property="IsExpanded" Value="True" />
                                    </Style>
                                </TreeView.Styles>
                            </TreeView>
                        </DockPanel>
                    </TabItem>
                    <TabItem Header="{Binding QueueTabHeader}">
                        <DockPanel>
                            <TextBox DockPanel.Dock="Top" Text="{Binding SearchText}" Watermark="Filter tree..."
                                     Margin="5">
                                <TextBox.InnerRightContent>
                                    <CheckBox IsChecked="{Binding IsRegex}" Content="Regex" VerticalAlignment="Center"
                                              Margin="0,0,5,0" BorderThickness="0" Background="Transparent" />
                                </TextBox.InnerRightContent>
                            </TextBox>
                            <TreeView SelectionChanged="TreeView_SelectionChanged"
                                      ItemsSource="{Binding FilteredConnectedServiceBuses}" Name="QueuesTreeView">
                                <TreeView.DataTemplates>
                                    <TreeDataTemplate DataType="models:ServiceBusResource"
                                                      ItemsSource="{Binding Queues}">
                                        <StackPanel Orientation="Horizontal">
                                            <i:Icon Value="fa-server" />
                                            <TextBlock Margin="5, 4" VerticalAlignment="Center"
                                                       Text="{Binding Name}" />
                                        </StackPanel>
                                    </TreeDataTemplate>
                                    <DataTemplate DataType="models:ServiceBusQueue">
                                        <StackPanel Orientation="Horizontal">
                                            <i:Icon Value="fa-bars" />
                                            <TextBlock Margin="3,7">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0}({1},{2})">
                                                        <Binding Path="Name" />
                                                        <Binding Path="MessageCount" />
                                                        <Binding Path="DlqCount" />
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </TreeView.DataTemplates>
                                <TreeView.Styles>
                                    <Style Selector="TreeViewItem">
                                        <Setter Property="IsExpanded" Value="True" />
                                    </Style>
                                </TreeView.Styles>
                            </TreeView>
                        </DockPanel>
                    </TabItem>
                </TabControl>

                <GridSplitter Grid.Column="1" ResizeBehavior="PreviousAndNext" VerticalAlignment="Stretch" Width="4" />

                <TabControl Grid.Column="2">
                    <TabItem Header="{Binding MessagesTabHeader}" VerticalContentAlignment="Center">
                        <DataGrid ItemsSource="{Binding Messages}" Tapped="MessagesGrid_Tapped"
                                  DoubleTapped="MessagesGrid_DoubleTapped"
                                  IsReadOnly="True" HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto"
                                  CanUserReorderColumns="True" CanUserResizeColumns="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Sequence Number" Binding="{Binding SequenceNumber}" />
                                <DataGridTextColumn Header="Message Id" Binding="{Binding MessageId}" />
                                <DataGridTextColumn Header="Content" Binding="{Binding Content}" Width="500"
                                                    MaxWidth="1000" />
                                <DataGridTextColumn Header="Label" Binding="{Binding Label}" />
                                <DataGridTextColumn Header="Size" Binding="{Binding Size}" />
                                <DataGridTextColumn Header="Delivery Count" Binding="{Binding DeliveryCount}" />
                                <DataGridTextColumn Header="Enqueue time (UTC)" Binding="{Binding EnqueueTimeUtc}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                    <TabItem Header="{Binding DlqTabHeader}" VerticalContentAlignment="Center">
                        <DataGrid ItemsSource="{Binding DlqMessages}" Tapped="MessagesGrid_Tapped"
                                  DoubleTapped="MessagesGrid_DoubleTapped" IsReadOnly="True"
                                  CanUserReorderColumns="True" CanUserResizeColumns="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Sequence Number" Binding="{Binding SequenceNumber}" />
                                <DataGridTextColumn Header="Message Id" Binding="{Binding MessageId}" />
                                <DataGridTextColumn Header="Dead-letter reason" Binding="{Binding DeadLetterReason}" />
                                <DataGridTextColumn Header="Label" Binding="{Binding Label}" MaxWidth="1000" />
                                <DataGridTextColumn Header="Size" Binding="{Binding Size}" />
                                <DataGridTextColumn Header="Delivery Count" Binding="{Binding DeliveryCount}" />
                                <DataGridTextColumn Header="Enqueue time (UTC)" Binding="{Binding EnqueueTimeUtc}" />
                                <DataGridTextColumn Header="Content" Binding="{Binding Content}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                </TabControl>
            </Grid>
        </DockPanel>

        <DockPanel Grid.Column="0" Grid.Row="2" Dock="Bottom">
            <TextBox BorderThickness="0,3,0,0" HorizontalAlignment="Stretch" IsReadOnly="True" Name="LogBox"
                     Watermark="logs ..." Text="{Binding LoggingService.Logs}" />
        </DockPanel>
    </Grid>
</Window>
